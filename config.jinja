{% set config = pillar.get('nginx_config') %}
user  {{ config.get('user', 'www-data') }};
worker_processes  {{ config.get('workers', 1) }};

#error_log  logs/error.log;
#error_log  logs/error.log  notice;
#error_log  logs/error.log  info;
#pid        logs/nginx.pid;
events {
    worker_connections  1024;
}
daemon off;
http {
	upstream web_app {
    	server {{config.get('haproxy_token','#HAPROXY#')}}:{{config.get('webapp_proxy_port',8080)}}; 
	}
  proxy_cache_path /data/nginx_cache keys_zone=one:10m;
    include       mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  access.log  main;

    sendfile        on;
    #tcp_nopush     on;

    #keepalive_timeout  0;
    keepalive_timeout  65;

    gzip  on;
    server {
        listen       {{ config.get('port',80)}};
        server_name  {{ config.get('name','localhost')}};
        
		    {% for webpath,filepath in config.get('static') %}
		
		    location /{{webpath}} {
			    alias {{filepath}};
		    }
        {% endfor %}
        location /static {
          proxy_cache one;
          uwsgi_pass  web_app;
          include     uwsgi_params;
        }
        location / {
			    uwsgi_pass  web_app;
		      include     uwsgi_params;
		    }
        error_page  404              /static/404.html;
        error_page   500 502 503 504  /static/50x.html;
    }

